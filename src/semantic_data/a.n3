@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix ex: <http://example.org/> .

<> rdf:type owl:Ontology ;
   rdfs:comment "An ontology for people and their organizations." .

ex:Person rdf:type owl:Class .
ex:Organization rdf:type owl:Class .

ex:worksFor rdf:type owl:ObjectProperty ;
    rdfs:domain ex:Person ;
    rdfs:range ex:Organization ;
    rdfs:label "works for" ;
    rdfs:comment "Relates a person to the organization they work for." .

ex:alice ex:livesIn ex:Pombal .
ex:alice ex:worksFor ex:AcmeInc .
ex:bob ex:worksFor ex:BetaLtd .
ex:bob ex:livesIn ex:Lisboa .